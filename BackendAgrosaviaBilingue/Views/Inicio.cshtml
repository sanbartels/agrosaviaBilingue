@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
    // Get basic design settings from the homepage
    var home = (Inicio)Model.Root();
    int contadorBanner = 0;

    var productos = (Productos)home.Children<Productos>().Where(x => x.IsVisible()).FirstOrDefault();
}

<div class="container-fluid hero-header" style="background: linear-gradient(rgba(248, 223, 173, 0.1), rgba(248, 223, 173, 0.1)), url(@home.ImagenFondoHeader.Url()); background-position: center center; background-repeat: no-repeat; background-size: cover;">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">@home.Lema</h4>
                <h1 class="mb-5 display-3 text-primary">@home.TituloPrincipal</h1>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @foreach (Banner item in home.ListadoBannersHome.Select(x => x.Content).OfType<Banner>().ToList())
                        {
                            <div class="carousel-item @(contadorBanner==0 ? "active":string.Empty) rounded">
                                <img src="@item.Imagen.Url()"
                                     class="img-fluid w-100 h-100 bg-secondary rounded"
                                     alt="First slide" />
                                <a href="#" class="btn px-4 py-2 text-white rounded">@item.TituloBanner</a>
                            </div>
                            contadorBanner++;
                        }
                    </div>
                    <button class="carousel-control-prev"
                            type="button"
                            data-bs-target="#carouselId"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next"
                            type="button"
                            data-bs-target="#carouselId"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid fruite">
    <div class="container">
        <div class="tab-class text-center">
            <div class="row g-4 py-4">
                <h1>@productos.TituloSeccionEnInicio</h1>
            </div>
            <div class="tab-content py-4">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="row g-4">
                                @foreach (Producto producto in productos.Children())
                                {
                                    <a href="@producto.Url()" class="col-md-6 col-lg-4 col-xl-3">
                                        <div>
                                            <div class="rounded position-relative fruite-item">
                                                <div class="fruite-img">
                                                    <img src="@producto.Imagen.Url()"
                                                         class="img-fluid w-100 rounded-top"
                                                         alt="" />
                                                </div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4>@producto.NombreProducto</h4>
                                                    @Html.Raw(producto.ResumenProducto)
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
<!-- Featurs Start -->
@if (home.ListadoPromociones != null && home.ListadoPromociones.Any())
{
    <div class="container-fluid service py-5">
        <div class="container py-5">
            <div class="row g-4 justify-content-center">
                @foreach (ProductoPromocion produ in home.ListadoPromociones.Select(x => x.Content).OfType<ProductoPromocion>().ToList())
                {
                    <div class="col-md-6 col-lg-4">
                        <a href="@produ.Link">
                            <div class="service-item bg-secondary rounded border border-secondary">
                                <img src="@produ.Imagen.Url()" class="img-fluid rounded-top w-100" alt="@produ.Nombre" />
                                <div class="px-4 rounded-bottom">
                                    <div class="service-content bg-primary text-center p-4 rounded">
                                        <h5 class="text-white">@produ.Nombre</h5>
                                        <h3 class="mb-0">@produ.TextoOferta</h3>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}