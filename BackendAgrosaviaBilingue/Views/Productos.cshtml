@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Productos>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
    var productos = (Productos)Model;
}

<div class="container-fluid page-header py-5" style="background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(@productos.ImagenDeFondo.Url()); background-position: center center; background-repeat: no-repeat; background-size: cover;">
    <h1 class="text-center text-white display-6">@productos.TituloSeccionEnInicio</h1>
</div>

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">@productos.TituloSeccionInterna</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row g-4 justify-content-center">
                            @foreach (Producto producto in productos.Children())
                            {
                                <a href="@producto.Url()" class="col-md-6 col-lg-4 col-xl-3">
                                    <div>
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                                <img src="@producto.Imagen.Url()"
                                                     class="img-fluid w-100 rounded-top"
                                                     alt="" />
                                            </div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h4>@producto.NombreProducto</h4>
                                                @Html.Raw(producto.ResumenProducto)
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }

                            <div class="col-12">
                                <div class="pagination d-flex justify-content-center mt-5">
                                    <a href="#" class="rounded">&laquo;</a>
                                    <a href="#" class="active rounded">1</a>
                                    <a href="#" class="rounded">2</a>
                                    <a href="#" class="rounded">3</a>
                                    <a href="#" class="rounded">4</a>
                                    <a href="#" class="rounded">5</a>
                                    <a href="#" class="rounded">6</a>
                                    <a href="#" class="rounded">&raquo;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>